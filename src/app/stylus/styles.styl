@import 'nib'

html
    background linear-gradient(to right, rgba(169,3,41,0.8) 0%, rgba(143,2,34,0.6) 4%, rgba(255,255,255,.4) 19%, rgba(255,255,255,0.2) 100%)

.division-logo
    max-width 600px
    margin-left 3%

body
    background white
    padding-bottom 1%
    font 0.9em "Verdana", "Geneva", "sans-serif" !important
    margin 0 auto
    width 93%
    float right
    box-shadow -9px 17px 31px -4px rgba(0,0,0,0.75)

.ui-autocomplete
    overflow-x hidden
    overflow-y auto
    max-width 300px
    max-height 250px

.ui-widget
    font-size initial !important

p
    padding 20px 24px

form
    background white
    margin 0 auto
    ul
        li
            list-style none
    input, select
        &.error
            border 1px solid red
            background rgba(225, 0, 0, 0.24)
            &:before
                content "*"
    .error
        &.ms-choice, &.custom-combobox-input
            border 1px solid red
            background rgba(225, 0, 0, 0.24)
#content
    display block
    padding 0 25%

#mainTitle
    text-align center
    clear both
    font-size x-large
header
    padding 2% 0
    margin-top 0
    hr
        width 100%
        float right
        margin 0
        border 0
        height 13px
        background-image linear-gradient(to right, rgba(0, 0, 0, 0) 8%, #BB0E3D, rgba(0, 0, 0, 0) 100%);

#subHeading
    font-size medium
    border 3px ridge rgba(0, 66, 118, 0.47)
    text-align center
    padding 1%
    clear both
    background-color lightslategray
    color white

#errorDisplay,#successBox
    padding 1%
    margin 10px auto
    clear both
    text-align center
    font-size .9em
    li
        list-style none
        margin  0 auto
        &.error
            width inherit
            float none
            color inherit

#successBox
    font-size 1.1em
    border 2px solid darkgreen
    background rgba(12, 193, 12, 0.27)
    margin 1% auto
    color darkgreen
    span
        width 20px
        float left

ol li
    margin 2% auto
ul
    display block
    padding-left 16px

li
    position relative
    padding 4px 0px
    clear both

label
    display block !important
    float left !important

fieldset
    margin 2% auto
    padding 1em
    border 0.1em groove

legend
    font-size 1em
    font-weight bold

form
    .custom-combobox
        position relative
        display inline-block
        a
            height 33px !important
            vertical-align bottom
        input
            height 35px !important
            width 265px !important
            text-align center

    input[type="file"], input[type="text"], input[type="number"], input[type="email"],
    select,button,progress
        width 300px !important
        height 35px !important
        font-size inherit

    input[name='pathway_type']
        float inherit

    button.ui-button-icon-only, a.ui-button
        width 2.4em !important

progress
    display block
    margin 0 auto

.tooltip
    background url("/common/images/info.png") no-repeat center
    width 16px
    height 16px
    margin-left 5px
.studyResources
    float right
    label
        padding 0 5px
#refinep_div
    float right

#refinep
    input[type="checkbox"]
        display inline-block
    label
        display inline-block
        width auto
        float none

.box-error
    border 2px solid maroon
    background rgba(255, 115, 115, 0.5)

.left-align
    float right
    margin-right 280px

.spacer
    content "|"
    display inline-block
.addControl
    text-align center
    height 30px
    margin 2% 0

.buttonGroup
    margin 0 auto
    width 550px
    button
        width 250px !important
        display inline-block

.input
    float right
    clear right
    input.input-fit
        width 260px !important
.ms-drop
    font-size 85%
    li:not(.group)
        text-indent 20px

#spinner
    background url("/common/images/loading.gif") no-repeat center/50%
    height 100px
    width 100px
    clear both
    margin 0 auto
    display none

#snippets,.hide
    display none
footer
    padding 2% 0
    clear both
    text-align center
    font-size small
    ul li
        list-style none
        display inline-block !important
        margin 0 5px
        a
            color black
