html
    background lightgrey
.division-logo
    max-width 50%
body
    background white
    padding-bottom 1%
    font 10pt/1.1 "Verdana", "Geneva", "sans-serif"
    margin 0 auto
    width 75%
    box-shadow: 2px 3px 31px -5px rgba(0,0,0,1);

p
    padding 20px 24px

form
    background white
    margin 0 auto
    ul
        li
            list-style none
            //        label
            //            width 208px !important
    .error
        &::before
            content "*"
            margin 0px 8px
#content
    display block
    margin 0px auto
    padding 0 2%
    width 60%

#mainTitle
    text-align center
    clear both
header
    padding 2% 0
    margin-top 0
    hr
        width 90%
        float right
        margin 0
        border 0
        height 13px
        background-image linear-gradient(to right, rgba(0, 0, 0, 0), #BB0E3D, rgba(0, 0, 0, 0));

#subHeading
    border 1px solid black
    //    margin 1% auto
    text-align center
    padding 1%
    clear both

#errorDisplay,#successBox
    padding 1%
    margin 10px auto
    clear both
    text-align center
    li
        list-style none
        margin  0 auto
        &.error
            width inherit
            float none
            color inherit

#successBox
    font-size 1.1em
    border 2px solid darkgreen
    background rgba(12, 193, 12, 0.27)
    margin 1% auto
    color darkgreen
    span
        width 20px
        float left

ol li
    margin 2% auto
ul
    display block
    padding-left 16px

li
    position relative
    padding 4px 0px
    clear both

label
    display block !important
    float left !important

fieldset
    margin 2% auto
    padding 1%
    border 2px outset
legend
    font-size 1.1em
    font-weight bold

input[type="file"],input[type="text"],input[type="number"],input[type="email"],select,button,progress
    width 300px
    height 35px

#calculate, progress
    display block
    margin 0 auto

.tooltip
    background url("/common/images/info.png") no-repeat center
    width 16px
    height 16px
    margin-left 5px
.studyResources
    float right
    label
        padding 0 5px
#refinep_div
    float right

#refinep
    input[type="checkbox"]
        display inline-block
    label
        display inline-block
        width auto
        float none


.error
    color red
.spacer
    content "|"
    display inline-block
.addControl
    text-align center
    height 30px
    margin 2% 0

.input
    float right
    clear right

#spinner
    background url("/common/images/loading.gif") no-repeat center/50%
    height 100px
    width 100px
    clear both
    margin 0 auto
    display none

#snippets
    display none
footer
    padding 2% 0
    clear both
    text-align center
    ul li
        list-style none
        display inline-block !important
        margin 0 5px
        a
            color black
