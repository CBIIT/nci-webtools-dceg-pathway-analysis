html
    background linear-gradient(to right, rgba(169,3,41,0.8) 0%, rgba(143,2,34,0.6) 4%, rgba(255,255,255,.4) 19%, rgba(255,255,255,0.2) 100%)
.division-logo
    max-width 50%
body
    background white
    padding-bottom 1%
    font 1em/1 "Verdana", "Geneva", "sans-serif" !important
    margin 0 auto
    width 95%
    float right
    box-shadow -9px 17px 31px -4px rgba(0,0,0,0.75)
.ui-widget
    font-size 1em
p
    padding 20px 24px

form
    background white
    margin 0 auto
    ul
        li
            list-style none
    .error
        &::before
            content "*"
            margin 0px 8px
#content
    display block
    margin 0px auto
    padding 0 10%
    min-width 60%
    width 80%

#mainTitle
    text-align center
    clear both
    font-size x-large
header
    padding 2% 0
    margin-top 0
    hr
        width 90%
        float right
        margin 0
        border 0
        height 13px
        background-image linear-gradient(to right, rgba(0, 0, 0, 0), #BB0E3D, rgba(0, 0, 0, 0));

#subHeading
    font-size medium
    border 3px ridge rgba(0, 66, 118, 0.47)
    text-align center
    padding 1%
    clear both
    background-color lightslategray
    color white

#errorDisplay,#successBox
    padding 1%
    margin 10px auto
    clear both
    text-align center
    li
        list-style none
        margin  0 auto
        &.error
            width inherit
            float none
            color inherit

#successBox
    font-size 1.1em
    border 2px solid darkgreen
    background rgba(12, 193, 12, 0.27)
    margin 1% auto
    color darkgreen
    span
        width 20px
        float left

ol li
    margin 2% auto
ul
    display block
    padding-left 16px

li
    position relative
    padding 4px 0px
    clear both

label
    display block !important
    float left !important

fieldset
    margin 2% auto
    padding 1em
    border 0.2em groove

legend
    font-size medium
    font-weight bold

input[type="file"],input[type="text"],input[type="number"],input[type="email"],select,button,progress
    width 300px !important
    height 35px !important
    font-size inherit

progress
    display block
    margin 0 auto

.tooltip
    background url("/common/images/info.png") no-repeat center
    width 16px
    height 16px
    margin-left 5px
.studyResources
    float right
    label
        padding 0 5px
#refinep_div
    float right

#refinep
    input[type="checkbox"]
        display inline-block
    label
        display inline-block
        width auto
        float none

.error
    color red
.spacer
    content "|"
    display inline-block
.addControl
    text-align center
    height 30px
    margin 2% 0

.buttonGroup
    margin 0 auto
    max-width 300px

.input
    float right
    clear right

#spinner
    background url("/common/images/loading.gif") no-repeat center/50%
    height 100px
    width 100px
    clear both
    margin 0 auto
    display none

#snippets
    display none
footer
    padding 2% 0
    clear both
    text-align center
    font-size small
    ul li
        list-style none
        display inline-block !important
        margin 0 5px
        a
            color black
