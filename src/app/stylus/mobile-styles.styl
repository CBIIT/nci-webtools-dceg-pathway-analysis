@media (max-width 1280px)
    body
        width 100% !important
        font-size 1em !important
    .content
        width 100%

@media (max-width 990px)
    .tooltip
        display none

@media (min-width 320px) and (max-width 990px)
    .ui-accordion .ui-accordion-content
        padding .5em !important
    footer
        .spacer
            display none
        ul li
            display block !important
            margin 0 !important
            width 100%
    .tooltip
        background-size 90% !important
        width 25px !important
        height 30px !important
        padding 5px
        float right

    input[type="text"], input[type="number"], input[type="email"], input[type="file"], select, button, progress
        font-size 1em
    input[type="checkbox"]
        width 25px
        height 25px
    #refinep_div
        float inherit

@media (min-width 320px) and (max-width 479px) and (-webkit-min-pixel-ratio 1)
    .input
        width 100%
    #refinep_div
        width 50%
    .division-logo
        max-width 330px

@media (min-width 480px) and (max-width 599px) and (-webkit-min-pixel-ratio 2) and (min-resolution 192dpi)
    .input
        width 100%
    #refinep_div
        float inherit
        width 50%
    .division-logo
        max-width 330px

@media (min-width 600px) and (max-width 767px) and (-webkit-min-pixel-ratio 1.5)
    .input
        width 100%
    #refinep_div
        width 50%
            header
    .division-logo
        max-width 330px

@media (min-width 768px) and (max-width 1280px) and (-webkit-min-pixel-ratio 1)
    .input
        width 70%
    #refinep_div
        width 20%
