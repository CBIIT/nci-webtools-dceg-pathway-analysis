@media screen and (min-device-width 320px) and (max-device-width 1200px)
    body
        width 99% !important
        font-size 1em !important
    header
        .division-logo
            min-width 330px
    #content
        width 95% !important
    footer
        .spacer
            display none
        ul li
            display block !important
            margin 0 !important
    .tooltip
        background-size 90% !important
        width 25px !important
        height 30px !important
        padding 5px
        float right

    input[type="text"], input[type="number"], input[type="email"], input[type="file"], select, button, progress
        width 90% !important
        height 40px !important
        font-size 1em

    #refinep_div
        float inherit

@media screen and (min-device-width 320px) and (max-device-width 479px) and (-webkit-min-device-pixel-ratio 1)
    .input
        width 100%
    #refinep_div
        width 50%

@media screen and (min-device-width 480px) and (max-device-width 599px) and (-webkit-min-device-pixel-ratio 2) and (min-resolution 192dpi)
    .input
        width 100%
    #refinep_div
        float inherit
        width 50%

@media only screen and (min-device-width 600px) and (max-device-width 767px) and (-webkit-min-device-pixel-ratio 1.5)
    .input
        width 100%
    #refinep_div
        width 50%

@media screen and (min-device-width 768px) and (max-device-width 989px) and (-webkit-min-device-pixel-ratio 1)
    .input
        width 60%
    #refinep_div
        width 20%

@media screen and (min-device-width 990px) and (max-device-width 1200px) and (-webkit-min-device-pixel-ratio 2) and (min-resolution 192dpi)
    .input
        width 60%
    #refinep_div
        width 20%
